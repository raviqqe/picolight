{
  "name": "picolight",
  "version": "0.2.6",
  "description": "The tiny syntax highlighting library",
  "repository": "https://github.com/raviqqe/picolight",
  "license": "MIT",
  "publishConfig": {
    "provenance": true
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./languages/*": {
      "types": "./dist/languages/*.d.ts",
      "default": "./dist/languages/*.js"
    },
    "./themes/*": {
      "types": "./dist/themes/*.d.ts",
      "default": "./dist/themes/*.js"
    }
  },
  "scripts": {
    "build": "node --run build:themes && tsdown",
    "build:themes": "node src/scripts/build-themes.ts",
    "lint": "knip",
    "test": "vitest --coverage"
  },
  "devDependencies": {
    "@raviqqe/tsconfig": "^2.0.3",
    "@types/node": "^24.9.1",
    "@vitest/coverage-v8": "^3.2.4",
    "es-toolkit": "^1.40.0",
    "jsdom": "^27.0.1",
    "knip": "^5.66.1",
    "tm-themes": "^1.10.11",
    "tsdown": "^0.15.8",
    "typescript": "^5.9.3",
    "valibot": "^1.1.0",
    "vitest": "^3.2.4"
  }
}
