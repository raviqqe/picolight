{
  "name": "picolight",
  "version": "0.2.8",
  "description": "The tiny syntax highlighting library",
  "repository": "https://github.com/raviqqe/picolight",
  "license": "MIT",
  "publishConfig": {
    "provenance": true
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./languages/*": {
      "types": "./dist/languages/*.d.ts",
      "default": "./dist/languages/*.js"
    },
    "./themes/*": {
      "types": "./dist/themes/*.d.ts",
      "default": "./dist/themes/*.js"
    }
  },
  "scripts": {
    "build": "node --run build:themes && tsdown",
    "build:themes": "node src/scripts/build-themes.ts",
    "lint": "knip",
    "test": "vitest --coverage"
  },
  "devDependencies": {
    "@raviqqe/tsconfig": "^2.0.3",
    "@types/node": "^25.0.1",
    "@vitest/coverage-v8": "^4.0.15",
    "es-toolkit": "^1.42.0",
    "jsdom": "^27.3.0",
    "knip": "^5.73.3",
    "tm-themes": "^1.10.13",
    "tsdown": "^0.17.3",
    "typescript": "^5.9.3",
    "valibot": "^1.2.0",
    "vitest": "^4.0.15"
  }
}
