---
const { title, description } = Astro.props.frontmatter;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="icon" href={`${import.meta.env.BASE_URL}/icon.svg`} />
    <base target="_blank" />
    <title>{title}</title>
  </head>
  <body>
    <article>
      <slot />
    </article>
  </body>
</html>
<style>
  :root {
    --black: black;
    --white: white;

    background-color: light-dark(var(--white), var(--black));
    color-scheme: light dark;
    color: light-dark(var(--black), var(--white));
    font-family: sans-serif;
    font-size: 16px;
    line-height: 1.5;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    display: grid;
    place-items: center;
  }

  article {
    max-width: 42rem;
    padding: 1.5rem;
  }
</style>
<style is:global>
  pre[class~="astro-code"] {
    border-radius: 0.5rem;
    font-size: 0.9rem;
    padding: 1em;
  }
</style>
