import Example from "./Example.astro";

const source = `
import { exit } from "node:process";

// This is a comment.

const xs = [false, true, null];

function fibonacci(x: number): number {
  if (x < 2) {
    return x;
  } else {
    return fibonacci(x - 1) + fibonacci(x - 2);
  }
}

console.log("Hello, world!");

console.log("\\n\\r\\t\\"\\\\");
`.trim();
